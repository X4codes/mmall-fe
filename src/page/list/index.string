{{#list}}
	<li class="p-item">
		<div class="p-img-con">
			<a href="./detail.html?productId={{id}}" target="_blank" class="link">
				<img class="p-img" src="{{imageHost}}{{mainImage}}" alt="{{name}}">
			</a>
		</div>
		<div class="p-price-con">
			<span class="p-price">&yen{{price}}</span>
		</div>
		<div class="p-name-con">
			<a href="./detail.html?productId={{id}}" class="p-name">{{name}}</a>
		</div>
	</li>
{{/list}}
{{^list}}
	<p class="err-tip">实在找不到您要的商品，我尽力了喵~</p>
{{/list}}